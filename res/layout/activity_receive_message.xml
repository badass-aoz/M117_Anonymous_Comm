<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveMessage"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/receive_message_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Message you receive" />

    <Button
        android:id="@+id/display_image"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receive_message_prompt"
        android:layout_centerHorizontal="true"
        android:text="image" />

    <ImageView
        android:id="@+id/received_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:contentDescription="image the user just received, if any" />

    <TextView
        android:id="@+id/received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/received_image"
        android:layout_below="@+id/display_image"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:scrollbars="vertical" />

</RelativeLayout>