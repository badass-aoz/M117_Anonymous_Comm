<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Settings" >

    <Button
        android:id="@+id/save_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="58dp"
        android:onClick="saveSettings"
        android:hint="@string/save_str" />

    <Button
        android:id="@+id/cancel_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_setting_btn"
        android:layout_alignBottom="@+id/save_setting_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:onClick="cancelSettings"
        android:hint="@string/cancel_str" />
    
    <EditText
        android:id="@+id/server_ip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/server_ip_str"
        android:layout_alignBottom="@+id/server_ip_str"
        android:layout_toRightOf="@+id/server_ip_str"
        android:ems="10"
        android:hint="@string/def_server_ip"
        android:inputType="numberDecimal"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/server_ip_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Server IP addr"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_ip_str"
        android:layout_toRightOf="@+id/server_ip_str"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:hint="@string/def_port" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditText01"
        android:layout_alignBottom="@+id/EditText01"
        android:layout_alignRight="@+id/server_ip_str"
        android:text="Port"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
